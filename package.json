{
  "name": "commerce-node",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nicommerce/commerce-node.git"
  },
  "bugs": {
    "url": "https://github.com/nicommerce/commerce-node/issues"
  },
  "homepage": "https://github.com/nicommerce/commerce-node#readme",
  "description": "Official Coinbase Commerce SDK for Node.js",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "author": "Commerce",
  "license": "MIT",
  "packageManager": "yarn@4.1.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "commit": "git-cz",
    "build": "rimraf dist && tsc",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint 'src/**/*.{js,ts}'",
    "lint:fix": "eslint 'src/**/*.{js,ts}' --fix",
    "format": "prettier --write 'src/**/*.{js,ts}'",
    "docs": "typedoc --out docs src && touch docs/.nojekyll",
    "docs:serve": "serve docs",
    "predeploy": "yarn docs",
    "deploy:docs": "gh-pages -d docs",
    "prepare": "husky install",
    "prepublishOnly": "yarn build",
    "preversion": "yarn lint",
    "version": "yarn format && git add -A src",
    "postversion": "git push && git push --tags",
    "test:integration": "node -r ts-node/register --env-file=.env e2e/index.ts"
  },
  "keywords": [
    "coinbase",
    "commerce",
    "payments",
    "crypto",
    "web3",
    "sdk"
  ],
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/js": "^9.16.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^12.0.1",
    "@types/gh-pages": "^6",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.1",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "eslint": "^9.16.0",
    "eslint-plugin-prettier": "^5.2.1",
    "gh-pages": "^6.2.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.11",
    "pinst": "^3.0.0",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.2.0",
    "serve": "^14.2.4",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typedoc": "^0.27.4",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@uniswap/v3-sdk": "^3.19.0",
    "abitype": "^1.0.7",
    "viem": "^2.21.54"
  },
  "version": "1.4.0"
}
